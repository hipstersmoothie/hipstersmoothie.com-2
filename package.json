  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next && rm -rf public/optimized",
    "dev": "next dev",
    "setup-git-for-ci": "git remote add origin https://github.com/hipstersmoothie/hipstersmoothie.com-2.git && git pull origin main --unshallow",
    "build": "pnpm run setup-git-for-ci && pnpm exec playwright install chromium && node -r esbuild-register scripts/generate-optimized-images.ts && pnpm run sync-content && next build",
    "sync-content": "mkdir -p public/posts && cpx \"src/app/blog/posts/**/page.mdx\" public/posts",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "create-blog-post": "node -r esbuild-register scripts/create-blog-post/create.ts",
    "create-experiment": "node -r esbuild-register scripts/create-experiment/create.ts"
  },
